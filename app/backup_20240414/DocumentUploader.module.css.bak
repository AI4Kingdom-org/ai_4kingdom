.container {
  padding: 20px;
}

.error {
  color: #dc3545;
  margin-bottom: 15px;
  padding: 10px;
  background-color: #f8d7da;
  border-radius: 4px;
}

.fileUpload {
  margin-bottom: 20px;
  display: flex;
  gap: 10px;
  align-items: center;
}

.fileInput {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.button {
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.button:disabled {
  background-color: #ccc;
  cursor: not-allowed;
}

.deleteButton {
  background-color: #dc3545;
}

.fileList {
  border: 1px solid #ddd;
  border-radius: 4px;
}

.fileListHeader {
  padding: 10px;
  background-color: #f8f9fa;
  border-bottom: 1px solid #ddd;
}

.selectAllLabel {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
}

.fileItem {
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.fileItem:last-child {
  border-bottom: none;
}

.fileItem.selected {
  background-color: #e9ecef;
}

.fileLabel {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
}

.fileName {
  flex: 1;
}

.uploadDate {
  color: #6c757d;
  font-size: 0.9em;
}

.checkbox {
  cursor: pointer;
}

.uploadContainer {
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
}

.uploadArea {
  position: relative;
  border: 2px dashed #ccc;
  border-radius: 8px;
  padding: 2rem;
  text-align: center;
  background-color: #f9f9f9;
  transition: all 0.3s ease;
}

.uploadArea:hover {
  border-color: #666;
  background-color: #f0f0f0;
}

.fileInput {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
  cursor: pointer;
}

.uploadLabel {
  display: block;
  font-size: 1.1rem;
  color: #666;
  cursor: pointer;
}

.error {
  margin-top: 1rem;
  padding: 0.5rem;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 4px;
  font-size: 0.9rem;
} 